{% extends "::base.html.twig" %}

{% block title %}
	Contact Us
{% endblock %}

{% block body %}
	<br><br><br>
	<div class="row block">
		<div class="col-md-6 col-md-offset-3">
			{% if message is defined %}

				<div class="alert alert-success">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{{ message }}
				</div>

			{% endif %}

			<br> <br> <br>
			<div id="contact-grid" class="centered-element">
				<p id="header">We want to hear from you! Responses arrive within 1-2 working days.</p>
				<form method="post" action="">
					<div class="row">
						<div class="col-md-6">
							<input class="form-control" type="text" placeholder="First Name" name="fname">
						</div>
						<div class="col-md-6">
							<input class="form-control" type="text" placeholder="Last Name" name="lname">
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<input class="form-control" type="text" placeholder="Email Address" name="email">
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<textarea class="form-control" rows="5" placeholder="Type your message here"
							          name="message"></textarea>
						</div>
					</div>
					<br><br><br>
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<div class="text-center">
								<input type="submit" name="submit" class="btn btn-primary btn-lg" value="Send">
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<br><br><br><br><br><br><br><br><br>

{% endblock %}
